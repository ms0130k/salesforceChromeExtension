{
  "name": "Salesforce app launcher opener",
  "description": "Open salesforce app launcher by shortcut",
  "version": "1.1.2",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "options_page": "options.html",
  "commands": {
    "open-app-launcher": {
      "suggested_key": "Ctrl+Q",
      "description": "Open salesforce app launcher"
    },
    "focus-quick-find": {
      "suggested_key": "Alt+Q",
      "description": "Focus on quick find"
    },
    "open-object-manager": {
      "suggested_key": "Ctrl+Shift+Q",
      "description": "Open this object manager"
    },
    "open-setup-flows": {
      "suggested_key": "Alt+Shift+Q",
      "description": "Open setup flows"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.force.com/*"],
      "js": ["content-script.js"]
    }
  ]
}
